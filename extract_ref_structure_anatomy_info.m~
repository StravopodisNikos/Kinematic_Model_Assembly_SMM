function [xi_ai_0, xi_pj_0, g_ai_0, g_pj_0] = extract_ref_structure_anatomy_info(joint_type, xi, cnt,g_s_m_i1)
% Saves spatial active/passive twists and frames

xi_ai_0 = zeros(6,);

switch joint_type
    case 'active'
        xi_ai_0(:,cnt) = xi;
        g_ai_0(:,:,cnt) = g_s_m_i1;
    case 'passive'
        xi_pj_0(:,cnt) = xi;
        g_pj_0(:,:,cnt) = g_s_m_i1;
    otherwise
end

end